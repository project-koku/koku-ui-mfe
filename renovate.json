{
   "$schema": "https://docs.renovatebot.com/renovate-schema.json",
   "updateNotScheduled": false,
   "timezone": "America/New_York",
  "ignorePaths": [
    "**/.archive/**",
    "**/node_modules/**"
  ],
  "packageRules": [
    {
      "description": "Skip updates for react monorepo",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "allowedVersions": "< 19.0.0"
    },
    {
      "description": "Skip updates for node_modules and .archive",
      "matchUpdateTypes": ["*"],
      "matchFileNames": ["**/node_modules/**", "**/.archive/**"],
      "enabled": false
    }
  ]
}
